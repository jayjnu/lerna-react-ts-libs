{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": ".",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@lerna-react-libs/ui-core": ["./packages/ui-core/src"],
      "@lerna-react-libs/ui-core/*": ["./packages/ui-core/src/*"]
    },
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
